<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slightlydarkerwhite"
    android:orientation="vertical"
    tools:context="com.pack1.customer.HomeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/employeeHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/lightblue"
        app:title="Trang chủ nhân viên"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            >

            <ImageButton
                android:id="@+id/logoutbtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:background="@null"

                android:scaleType="fitXY"
                android:src="@drawable/baseline_logout_24" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="50dp"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/profilenhanvien"
            android:layout_width="150dp"
            android:layout_height="150dp"

            android:background="@drawable/baseline_face_24"
            android:text="Profile"
            android:textColor="@color/darkgray" />

        <Button
            android:id="@+id/checkorder"
            android:layout_width="150dp"
            android:layout_height="150dp"

            android:background="@drawable/baseline_receipt_24"
            android:text="Xử lý đơn hàng"
            android:textColor="@color/darkgray" />
    </LinearLayout>

</LinearLayout>
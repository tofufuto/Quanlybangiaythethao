<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pack1.payment.PaymentLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/tvInfoUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="8dp"
            android:text="Thông tin người dùng"
            android:background="@android:color/holo_blue_light"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhấn để nhập địa chỉ"
            android:textSize="18sp"
            android:padding="8dp"
            android:background="@android:color/holo_blue_light"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="5dp"/>

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập địa chỉ"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnOk"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Xác nhận"
            android:textAlignment="center"
            android:textColor="#0FE00F"
            android:visibility="gone" />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1"
            >
            <TableRow>

                <TextView
                    android:layout_width="79dp"
                    android:layout_height="wrap_content"
                    android:text="SanPham"></TextView>
                <EditText
                    android:id="@+id/etQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nhập SL"
                    android:textAlignment="center">

                </EditText>

            </TableRow>
            <TableRow>

                <TextView
                    android:layout_width="79dp"
                    android:layout_height="wrap_content"
                    android:text="Tổng tiền:"></TextView>

                <TextView
                    android:id="@+id/tvtotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chưa nhập số lượng"
                    android:textAlignment="center">

                </TextView>

            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#b0006d"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageLogo"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/zalo"></ImageView>

            <Button
                android:id="@+id/btzalo"
                android:layout_width="322dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:backgroundTint="#5DE2E7"
                android:drawablePadding="8dp"
                android:padding="12dp"
                android:text="Thanh Toan Zalo"
                android:textAlignment="center"
                android:textColor="#FFFFFF"></Button>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>